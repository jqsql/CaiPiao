<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jqscp.Activity.MainActivity">

    <RadioGroup
        android:id="@+id/Main_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/White">
        <RadioButton
            android:id="@+id/Main_Home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:padding="6dp"
            android:checked="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/main_radiobtn_icon_home"
            android:textColor="@color/main_radiobtn_check"
            android:textSize="@dimen/app_main_size"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/Main_Lottery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:padding="6dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/main_radiobtn_icon_lottery"
            android:textColor="@color/main_radiobtn_check"
            android:textSize="@dimen/app_main_size"
            android:text="开奖"/>
        <RadioButton
            android:id="@+id/Main_Find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:padding="6dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/main_radiobtn_icon_find"
            android:textColor="@color/main_radiobtn_check"
            android:textSize="@dimen/app_main_size"
            android:text="发现"/>
        <RadioButton
            android:id="@+id/Main_My"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:padding="6dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/main_radiobtn_icon_my"
            android:textColor="@color/main_radiobtn_check"
            android:textSize="@dimen/app_main_size"
            android:text="我的"/>
    </RadioGroup>
    <com.jqscp.View.NoScrollViewPager
        android:id="@+id/Main_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Main_RadioGroup"/>

</RelativeLayout>
