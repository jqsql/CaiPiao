<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Five_Star_View_Bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_white_top1"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/Five_Star_View_BottomText"
            style="@style/Text_ww_Commmon_Black"
            android:layout_centerInParent="true"
            android:text="共 0 注, 0 元"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@id/Five_Star_View_Bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/Text_ww_Commmon_Black"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/play_number_bg"
                    android:text="@string/Hundreds"
                    />
                <com.jqscp.View.MyGrideview
                    android:id="@+id/GridView01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="auto_fit"
                    android:columnWidth="45dp"
                    android:listSelector="@android:color/transparent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/Text_ww_Commmon_Black"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/play_number_bg"
                    android:text="@string/Decade"
                    />
                <com.jqscp.View.MyGrideview
                    android:id="@+id/GridView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="auto_fit"
                    android:columnWidth="45dp"
                    android:listSelector="@android:color/transparent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/Text_ww_Commmon_Black"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/play_number_bg"
                    android:text="@string/Units"
                    />
                <com.jqscp.View.MyGrideview
                    android:id="@+id/GridView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="auto_fit"
                    android:columnWidth="45dp"
                    android:listSelector="@android:color/transparent"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>